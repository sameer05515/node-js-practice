<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/product.css">
</head>

<body>
    <%- include('../includes/navigation.ejs') %>

    <main>
        <a href="/words/new" class="btn">Add Word</a>
        <% if (allWords.length > 0) { %>
            <div class="grid">
                <% for (let product of allWords) { %>
                    <article class="card product-item">
                        <header class="card__header">
                            <h1 class="product__title"><%= product.word %></h1>
                        </header>                        
                        <div class="card__content">
                            <h2 class="product__price"><%= product.partOfSpeeches %></h2>
                            <p class="product__description"><%= product.description %></p>
                        </div>
                        <div class="card__actions">
                                <a href="/words/edit-word/<%= product._id %>?edit=true" class="btn">Edit</a>
                                <form action="/words/delete-word" method="POST">
                                    <input type="hidden" value="<%= product._id %>" name="wordId">
                                    <button class="btn" type="submit">Delete</button>
                                </form>
                        </div>
                    </article>
                <% } %>
            </div>
        <% } else { %>
            <h1>No Products Found!</h1>
        <% } %>
    </main>
<%- include('../includes/end.ejs') %>